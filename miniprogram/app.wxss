/* ── Design Tokens ── */
/* Primary: #1677ff  Accent: #ff5500  BG: #f5f6fa */

page {
  background: #f5f6fa;
  color: #111827;
  font-size: 28rpx;
  font-family: -apple-system, 'PingFang SC', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 24rpx;
}

.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(17, 24, 39, 0.07);
}

.btn {
  background: linear-gradient(135deg, #1677ff, #0e5fd8);
  color: #fff;
  border-radius: 40rpx;
  padding: 18rpx 24rpx;
  text-align: center;
  font-weight: 600;
  box-shadow: 0 6rpx 18rpx rgba(22, 119, 255, 0.30);
}

.input {
  background: #f3f4f6;
  border-radius: 40rpx;
  padding: 18rpx 24rpx;
}
