<view class="container">
  <!-- 品牌 Header -->
  <view class="page-header">
    <view class="page-header-title">易宿酒店</view>
    <view class="page-header-sub">发现理想住所</view>
  </view>

  <mobile-banner list="{{bannerList}}" />

  <view class="card query-card">
    <view class="section">
      <view class="label">城市</view>
      <view class="city-row">
        <view class="city-input-wrap">
          <mobile-city-picker
            value="{{city}}"
            placeholder="请选择城市"
            bindchange="onCityPickerChange"
          />
        </view>
      </view>
    </view>

    <view class="section">
      <view class="label">关键词</view>
      <input
        class="input"
        placeholder="酒店名/地址"
        value="{{keyword}}"
        bindinput="onKeywordInput"
      />
    </view>

    <view class="section">
      <view class="label">入住 / 离店</view>
      <mobile-calendar
        checkIn="{{checkIn}}"
        checkOut="{{checkOut}}"
        bindchange="onCalendarChange"
      />
    </view>

    <view class="section">
      <view class="label">酒店星级</view>
      <checkbox-group value="{{stars}}" bindchange="onStarChange">
        <view class="star-row">
          <label wx:for="{{['1','2','3','4','5']}}" wx:key="*this" class="star-item">
            <checkbox value="{{item}}" />
            <text>{{item}}星</text>
          </label>
        </view>
      </checkbox-group>
    </view>

    <view class="section">
      <view class="label">价格区间（元/晚）</view>
      <mobile-range-slider
        min="50"
        max="1000"
        step="50"
        low="{{priceMin || 50}}"
        high="{{priceMax || 1000}}"
        bindchange="onPriceRangeChange"
      />
    </view>

    <view class="section">
      <view class="label">标签</view>
      <mobile-tags
        items="{{tagItems}}"
        selected="{{tags}}"
        bindchange="onTagsChange"
      />
    </view>

    <view class="btn" bindtap="onSearch">查询</view>
  </view>

  <assistant-float iconSrc="/components/assets/ai.png" />
</view>
