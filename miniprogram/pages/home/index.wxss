.container {
  padding: 24rpx;
  padding-bottom: 120rpx;
}

.query-card {
  margin-top: 24rpx;
}

.section {
  margin-bottom: 28rpx;
}

.section .label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.input {
  background: #f3f4f6;
  border-radius: 12rpx;
  padding: 18rpx 20rpx;
  font-size: 28rpx;
}

.city-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.city-input {
  flex: 1;
}
.relocate-btn {
  display: flex;
  align-items: center;
  background: #1677ff;
  color: #fff;
  border-radius: 12rpx;
  padding: 14rpx 20rpx;
  flex-shrink: 0;
}
.relocate-icon {
  font-size: 28rpx;
  margin-right: 6rpx;
}
.relocate-text {
  font-size: 26rpx;
}

.location-tip {
  font-size: 24rpx;
  color: #faad14;
  margin-top: 8rpx;
}

.location-tip.success {
  color: #52c41a;
}

.price-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.price-input {
  flex: 1;
}

.price-sep {
  color: #999;
  font-size: 28rpx;
}

.star-row {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.star-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
}

.star-item checkbox {
  transform: scale(0.9);
}

.btn {
  height: 60rpx;
  line-height: 60rpx;
  background: #1677ff;
  color: #fff;
  border-radius: 12rpx;
  padding: 0 24rpx;
  text-align: center;
  font-size: 30rpx;
  margin-top: 16rpx;
}

.btn:active {
  opacity: 0.9;
}
