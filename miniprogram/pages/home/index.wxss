/* ── Page Header ── */
.page-header {
  background: linear-gradient(135deg, #1677ff 0%, #0e5fd8 100%);
  border-radius: 20rpx;
  padding: 32rpx 28rpx 28rpx;
  margin-bottom: 20rpx;
}

.page-header-title {
  font-size: 40rpx;
  font-weight: 800;
  color: #fff;
  letter-spacing: 4rpx;
}

.page-header-sub {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.75);
  margin-top: 6rpx;
}

/* ── Container ── */
.container {
  padding: 24rpx;
  padding-bottom: 120rpx;
}

/* ── Query Card ── */
.query-card {
  margin-top: 20rpx;
}

.section {
  margin-bottom: 28rpx;
}

.section .label {
  font-size: 24rpx;
  font-weight: 600;
  color: rgba(17, 24, 39, 0.55);
  margin-bottom: 12rpx;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

/* ── Input ── */
.input {
  background: #f5f6fa;
  border-radius: 40rpx;
  padding: 18rpx 24rpx;
  font-size: 28rpx;
  color: #111827;
}

/* ── City Row ── */
.city-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.city-input-wrap {
  flex: 1;
  background: #f5f6fa;
  border-radius: 40rpx;
  padding: 16rpx 22rpx;
  border: 2rpx solid transparent;
}

.relocate-btn {
  display: flex;
  align-items: center;
  background: rgba(22, 119, 255, 0.10);
  color: #1677ff;
  border-radius: 40rpx;
  padding: 14rpx 20rpx;
  flex-shrink: 0;
}

.relocate-icon {
  font-size: 28rpx;
  margin-right: 6rpx;
}

.relocate-text {
  font-size: 26rpx;
  font-weight: 600;
}

.location-tip {
  font-size: 22rpx;
  color: #faad14;
  margin-top: 8rpx;
}

.location-tip.success {
  color: #52c41a;
}

/* ── Price Row ── */
.price-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.price-input {
  flex: 1;
}

.price-sep {
  color: #bbb;
  font-size: 28rpx;
}

/* ── Star Row ── */
.star-row {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.star-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
  background: #f5f6fa;
  border-radius: 40rpx;
  padding: 10rpx 20rpx;
  font-size: 26rpx;
  color: #555;
  border: 2rpx solid transparent;
}

.star-item checkbox {
  transform: scale(0.85);
}

/* ── Search Button ── */
.btn {
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #1677ff, #0e5fd8);
  color: #fff;
  border-radius: 44rpx;
  padding: 0 24rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 700;
  margin-top: 8rpx;
  box-shadow: 0 8rpx 24rpx rgba(22, 119, 255, 0.35);
  letter-spacing: 4rpx;
}

.btn:active {
  opacity: 0.88;
  transform: scale(0.98);
}
