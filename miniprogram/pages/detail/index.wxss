.page {
  background: #f5f6fa;
  min-height: 100vh;
  font-family: -apple-system, 'PingFang SC', 'Helvetica Neue', sans-serif;
}

.nav {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: 10;
  background: linear-gradient(180deg, #1d6fff 0%, #0b6cff 100%);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.14);
}

.nav-inner {
  height: 100%;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.nav-left {
  width: 160rpx;
}

.nav-back {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 56rpx;
  width: 72rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.22);
  border: 1rpx solid rgba(255, 255, 255, 0.20);
  font-size: 44rpx;
  line-height: 1;
  color: rgba(255, 255, 255, 0.98);
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.98);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.poi-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 98;
  background: rgba(0, 0, 0, 0.45);
}

.poi-panel {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 99;
  background: #fff;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  overflow: hidden;
}

.poi-panel-head {
  padding: 18rpx 22rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid rgba(17, 24, 39, 0.06);
}

.poi-panel-title {
  font-size: 30rpx;
  font-weight: 800;
  color: #111827;
}

.poi-panel-close {
  padding: 10rpx 16rpx;
  border-radius: 999rpx;
  background: rgba(17, 24, 39, 0.06);
  color: rgba(17, 24, 39, 0.80);
  font-size: 24rpx;
  font-weight: 700;
}

.poi-panel-body {
  max-height: 70vh;
  overflow-y: auto;
  padding: 18rpx 22rpx;
}

.poi-panel-space {
  height: 24rpx;
}

.nav-right {
  width: 160rpx;
}

.content {
  padding: 18rpx 24rpx 0;
}

.banner {
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 24rpx rgba(17, 24, 39, 0.10);
}

.banner-swiper {
  width: 100%;
  height: 420rpx;
}

.banner-img {
  width: 100%;
  height: 100%;
}

.banner-video {
  width: 100%;
  height: 100%;
}

.banner-placeholder {
  width: 100%;
  height: 420rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: radial-gradient(800rpx 520rpx at 50% 30%, #2b66ff 0%, #0b1530 60%, #070a14 100%);
}

.banner-ph-title {
  color: #fff;
  font-size: 40rpx;
  font-weight: 700;
  letter-spacing: 6rpx;
}

.banner-ph-sub {
  margin-top: 10rpx;
  color: rgba(255, 255, 255, 0.78);
  font-size: 24rpx;
}

.card {
  margin-top: 18rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 22rpx;
  box-shadow: 0 8rpx 18rpx rgba(17, 24, 39, 0.06);
}

.title-row {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 16rpx;
}

.hotel-name {
  font-size: 34rpx;
  font-weight: 700;
  color: #111827;
  flex: 1;
}

.star {
  font-size: 24rpx;
  color: #b45309;
  background: rgba(245, 158, 11, 0.14);
  padding: 6rpx 14rpx;
  border-radius: 999rpx;
  white-space: nowrap;
}

.sub-row {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: rgba(17, 24, 39, 0.55);
}

.kv {
  margin-top: 16rpx;
  display: flex;
  gap: 18rpx;
}

.kv-label {
  width: 84rpx;
  font-size: 24rpx;
  color: rgba(17, 24, 39, 0.55);
}

.kv-value {
  flex: 1;
  font-size: 26rpx;
  color: rgba(17, 24, 39, 0.90);
}

.addr-text {
  font-size: 26rpx;
  color: rgba(17, 24, 39, 0.90);
}

.near-row {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.near-left {
  flex: 1;
  min-width: 0;
}

.near-item {
  font-size: 22rpx;
  color: rgba(17, 24, 39, 0.60);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.near-btn {
  flex: none;
  padding: 8rpx 14rpx;
  border-radius: 999rpx;
  background: rgba(37, 99, 235, 0.12);
  color: rgba(37, 99, 235, 1);
  font-size: 22rpx;
  font-weight: 700;
}

.loc-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}

.loc-text {
  flex: 1;
  font-size: 24rpx;
  color: rgba(17, 24, 39, 0.75);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.loc-btn {
  flex: none;
  padding: 10rpx 18rpx;
  border-radius: 999rpx;
  background: rgba(37, 99, 235, 0.12);
  color: rgba(37, 99, 235, 1);
  font-size: 24rpx;
  font-weight: 600;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  font-size: 22rpx;
  color: rgba(17, 24, 39, 0.78);
  background: rgba(59, 130, 246, 0.10);
  padding: 8rpx 14rpx;
  border-radius: 999rpx;
}

.muted {
  font-size: 24rpx;
  color: rgba(17, 24, 39, 0.45);
}

.banner2 {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(239, 246, 255, 1) 45%, rgba(240, 253, 250, 1) 100%);
  color: #0f172a;
  border: 1rpx solid rgba(15, 23, 42, 0.06);
}

.banner2-title {
  font-size: 28rpx;
  font-weight: 600;
  opacity: 0.95;
}

.date-summary {
  margin-top: 14rpx;
  padding: 16rpx 18rpx;
  border-radius: 16rpx;
  background: rgba(255, 255, 255, 0.80);
  border: 1rpx solid rgba(15, 23, 42, 0.08);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.date-summary-text {
  font-size: 26rpx;
  font-weight: 700;
  color: rgba(15, 23, 42, 0.92);
}

.date-summary-right {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.date-summary-nights {
  font-size: 24rpx;
  color: rgba(15, 23, 42, 0.60);
}

.date-summary-arrow {
  font-size: 22rpx;
  color: rgba(15, 23, 42, 0.45);
}

.date-calendar {
  margin-top: 12rpx;
}

.banner2-row {
  margin-top: 18rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.date-block {
  width: 260rpx;
  background: rgba(255, 255, 255, 0.80);
  border: 1rpx solid rgba(15, 23, 42, 0.08);
  border-radius: 16rpx;
  padding: 14rpx;
}

.date-label {
  font-size: 22rpx;
  opacity: 0.72;
}

.date-value {
  margin-top: 10rpx;
  font-size: 26rpx;
  font-weight: 600;
}

.mid {
  flex: 1;
  padding: 0 14rpx;
  text-align: center;
}

.nights {
  font-size: 24rpx;
  opacity: 0.9;
}

.line {
  height: 2rpx;
  margin-top: 14rpx;
  background: linear-gradient(90deg, rgba(15, 23, 42, 0.0), rgba(15, 23, 42, 0.18), rgba(15, 23, 42, 0.0));
}

.banner2-row2 {
  margin-top: 16rpx;
  display: flex;
  gap: 18rpx;
}

.counter {
  flex: 1;
  background: rgba(255, 255, 255, 0.80);
  border: 1rpx solid rgba(15, 23, 42, 0.08);
  border-radius: 16rpx;
  padding: 14rpx;
}

.counter-label {
  font-size: 22rpx;
  opacity: 0.72;
}

.counter-ctl {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 14rpx;
  background: rgba(37, 99, 235, 0.10);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 700;
  color: rgba(37, 99, 235, 1);
}

.num {
  font-size: 30rpx;
  font-weight: 700;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
}

.poi-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}

.poi-toggle {
  flex: none;
  padding: 10rpx 16rpx;
  border-radius: 999rpx;
  background: rgba(17, 24, 39, 0.06);
  color: rgba(17, 24, 39, 0.80);
  font-size: 24rpx;
  font-weight: 600;
}

.section-sub {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: rgba(17, 24, 39, 0.55);
}

.hotel-map {
  margin-top: 14rpx;
  width: 100%;
  height: 360rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.poi-group {
  margin-top: 18rpx;
}

.poi-title {
  font-size: 26rpx;
  font-weight: 700;
  color: #0f172a;
}

.poi-empty {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: rgba(17, 24, 39, 0.45);
}

.poi-item {
  margin-top: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 14rpx;
  padding: 16rpx;
  border-radius: 16rpx;
  background: #f8fafc;
  border: 1rpx solid rgba(17, 24, 39, 0.06);
}

.poi-left {
  flex: 1;
  min-width: 0;
}

.poi-name {
  font-size: 26rpx;
  font-weight: 700;
  color: #111827;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.poi-addr {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: rgba(17, 24, 39, 0.52);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.poi-dist {
  flex: none;
  font-size: 24rpx;
  font-weight: 700;
  color: rgba(37, 99, 235, 1);
  background: rgba(37, 99, 235, 0.10);
  padding: 8rpx 12rpx;
  border-radius: 999rpx;
  white-space: nowrap;
}

.room {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18rpx;
  border-radius: 18rpx;
  background: #f8fafc;
  border: 1rpx solid rgba(17, 24, 39, 0.06);
}

.room-left {
  flex: 1;
  padding-right: 18rpx;
}

.room-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #111827;
}

.room-sub {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: rgba(17, 24, 39, 0.52);
}

.room-right {
  text-align: right;
  min-width: 160rpx;
}

.price {
  color: #ef4444;
  font-weight: 800;
}

.yen {
  font-size: 24rpx;
}

.p {
  font-size: 36rpx;
}

.per {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: rgba(17, 24, 39, 0.45);
}

.room-book {
  margin-top: 10rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 800;
  color: #fff;
  background: linear-gradient(135deg, #ff8a00 0%, #ff4d4f 100%);
  box-shadow: 0 10rpx 18rpx rgba(255, 77, 79, 0.22);
}

.empty {
  margin-top: 16rpx;
  padding: 24rpx 0;
  text-align: center;
  font-size: 24rpx;
  color: rgba(17, 24, 39, 0.45);
}

.error {
  margin-top: 16rpx;
  color: #dc2626;
  font-size: 24rpx;
}

.footer-space {
  height: 40rpx;
}
