
.page {
  background: #f5f6fa;
  min-height: 100vh;
}

.nav {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: 10;
  background: rgba(255, 255, 255, 0.92);
  backdrop-filter: blur(14px);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
}

.nav-inner {
  height: 100%;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
}

.nav-left {
  width: 160rpx;
}

.nav-back {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 56rpx;
  padding: 0 18rpx;
  border-radius: 999rpx;
  background: rgba(0, 0, 0, 0.05);
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.8);
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.nav-right {
  width: 160rpx;
}

.content {
  padding: 18rpx 24rpx 0;
}

.banner {
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 24rpx rgba(17, 24, 39, 0.10);
}

.banner-swiper {
  width: 100%;
  height: 420rpx;
}

.banner-img {
  width: 100%;
  height: 100%;
}

.banner-placeholder {
  width: 100%;
  height: 420rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: radial-gradient(800rpx 520rpx at 50% 30%, #2b66ff 0%, #0b1530 60%, #070a14 100%);
}

.banner-ph-title {
  color: #fff;
  font-size: 40rpx;
  font-weight: 700;
  letter-spacing: 6rpx;
}

.banner-ph-sub {
  margin-top: 10rpx;
  color: rgba(255, 255, 255, 0.78);
  font-size: 24rpx;
}

.card {
  margin-top: 18rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 22rpx;
  box-shadow: 0 8rpx 18rpx rgba(17, 24, 39, 0.06);
}

.title-row {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 16rpx;
}

.hotel-name {
  font-size: 34rpx;
  font-weight: 700;
  color: #111827;
  flex: 1;
}

.star {
  font-size: 24rpx;
  color: #b45309;
  background: rgba(245, 158, 11, 0.14);
  padding: 6rpx 14rpx;
  border-radius: 999rpx;
  white-space: nowrap;
}

.sub-row {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: rgba(17, 24, 39, 0.55);
}

.kv {
  margin-top: 16rpx;
  display: flex;
  gap: 18rpx;
}

.kv-label {
  width: 84rpx;
  font-size: 24rpx;
  color: rgba(17, 24, 39, 0.55);
}

.kv-value {
  flex: 1;
  font-size: 26rpx;
  color: rgba(17, 24, 39, 0.90);
}

.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  font-size: 22rpx;
  color: rgba(17, 24, 39, 0.78);
  background: rgba(59, 130, 246, 0.10);
  padding: 8rpx 14rpx;
  border-radius: 999rpx;
}

.muted {
  font-size: 24rpx;
  color: rgba(17, 24, 39, 0.45);
}

.banner2 {
  background: linear-gradient(135deg, #0b1530 0%, #0f2a6d 40%, #1b4aff 100%);
  color: #fff;
}

.banner2-title {
  font-size: 28rpx;
  font-weight: 600;
  opacity: 0.95;
}

.banner2-row {
  margin-top: 18rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.date-block {
  width: 260rpx;
  background: rgba(255, 255, 255, 0.10);
  border: 1rpx solid rgba(255, 255, 255, 0.18);
  border-radius: 16rpx;
  padding: 14rpx;
}

.date-label {
  font-size: 22rpx;
  opacity: 0.78;
}

.date-value {
  margin-top: 10rpx;
  font-size: 26rpx;
  font-weight: 600;
}

.mid {
  flex: 1;
  padding: 0 14rpx;
  text-align: center;
}

.nights {
  font-size: 24rpx;
  opacity: 0.9;
}

.line {
  height: 2rpx;
  margin-top: 14rpx;
  background: linear-gradient(90deg, rgba(255,255,255,0.0), rgba(255,255,255,0.6), rgba(255,255,255,0.0));
}

.banner2-row2 {
  margin-top: 16rpx;
  display: flex;
  gap: 18rpx;
}

.counter {
  flex: 1;
  background: rgba(255, 255, 255, 0.10);
  border: 1rpx solid rgba(255, 255, 255, 0.18);
  border-radius: 16rpx;
  padding: 14rpx;
}

.counter-label {
  font-size: 22rpx;
  opacity: 0.78;
}

.counter-ctl {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 14rpx;
  background: rgba(255, 255, 255, 0.18);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 700;
}

.num {
  font-size: 30rpx;
  font-weight: 700;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
}

.section-sub {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: rgba(17, 24, 39, 0.55);
}

.room {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18rpx;
  border-radius: 18rpx;
  background: #f8fafc;
  border: 1rpx solid rgba(17, 24, 39, 0.06);
}

.room-left {
  flex: 1;
  padding-right: 18rpx;
}

.room-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #111827;
}

.room-sub {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: rgba(17, 24, 39, 0.52);
}

.room-right {
  text-align: right;
  min-width: 160rpx;
}

.price {
  color: #ef4444;
  font-weight: 800;
}

.yen {
  font-size: 24rpx;
}

.p {
  font-size: 36rpx;
}

.per {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: rgba(17, 24, 39, 0.45);
}

.empty {
  margin-top: 16rpx;
  padding: 24rpx 0;
  text-align: center;
  font-size: 24rpx;
  color: rgba(17, 24, 39, 0.45);
}

.error {
  margin-top: 16rpx;
  color: #dc2626;
  font-size: 24rpx;
}

.footer-space {
  height: 40rpx;
}
