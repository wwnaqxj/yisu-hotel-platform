/* ════════════════════════════════════════════
   Global Reset
   ════════════════════════════════════════════ */
/* 与首页、app.wxss 风格统一：主色 #1677ff，背景 #f7f7f7 */
page {
  background: #f5f6fa;
  font-family: -apple-system, 'PingFang SC', 'Helvetica Neue', sans-serif;
  height: 100%;
}
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  position: relative;
  overflow: hidden;
}

.header {
  background: #1677ff;
  padding: 16rpx 24rpx 0;
  z-index: 200;
  box-shadow: 0 4rpx 16rpx rgba(22,119,255,0.25);
}

/* Row 1: City + Date */
.header-row1 {
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
}

.city-btn {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 40rpx;
  padding: 10rpx 20rpx;
  flex-shrink: 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}
.city-text {
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
}
.caret {
  color: rgba(255,255,255,0.8);
  font-size: 22rpx;
  margin-left: 6rpx;
}

.divider-v {
  width: 2rpx;
  height: 48rpx;
  background: rgba(255,255,255,0.3);
  margin: 0 20rpx;
  flex-shrink: 0;
}

.date-block {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.date-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.date-label {
  font-size: 20rpx;
  color: rgba(255,255,255,0.7);
}
.date-val {
  font-size: 30rpx;
  color: #fff;
  font-weight: 700;
  margin-top: 2rpx;
}
.nights-badge {
  background: rgba(255,255,255,0.25);
  border-radius: 20rpx;
  padding: 6rpx 16rpx;
  font-size: 22rpx;
  color: #fff;
}

/* Row 2: Search */
.search-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.search-box {
  flex: 1;
  background: rgba(255,255,255,0.95);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  padding: 14rpx 24rpx;
}
.search-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}
.search-placeholder {
  font-size: 26rpx;
  color: #999;
}
.search-clear {
  color: rgba(255,255,255,0.8);
  font-size: 28rpx;
  margin-left: 16rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255,255,255,0.2);
  border-radius: 50%;
}

/* Row 3: Filter Tabs */
.filter-tabs {
  display: flex;
  background: rgba(0,0,0,0.12);
  border-radius: 16rpx 16rpx 0 0;
  overflow: hidden;
}
.filter-tab {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 8rpx;
  font-size: 26rpx;
  color: rgba(255,255,255,0.8);
  position: relative;
  transition: all 0.2s;
}
.tab-active {
  color: #fff;
  background: rgba(255,255,255,0.15);
}
.tab-selected {
  color: #ffd700;
}
.tab-caret {
  font-size: 20rpx;
  margin-left: 4rpx;
  display: inline-block;
  transition: transform 0.2s;
}
.caret-up {
  transform: rotate(180deg);
}
.filter-badge {
  background: #ff5500;
  color: #fff;
  font-size: 18rpx;
  border-radius: 20rpx;
  padding: 0 8rpx;
  margin-left: 6rpx;
  min-width: 28rpx;
  text-align: center;
}

/* ════════════════════════════════════════════
   OVERLAY & FILTER PANELS
   ════════════════════════════════════════════ */
.overlay-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.4);
  z-index: 300;
}

.filter-panel {
  position: absolute;
  top: 0; /* will be offset by the header height */ 
  left: 0; right: 0;
  background: #fff;
  z-index: 400;
  border-radius: 0 0 24rpx 24rpx;
  padding: 0 30rpx 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.15);
  transform: translateY(-120%);
  transition: transform 0.28s cubic-bezier(0.4,0,0.2,1);
}
.panel-show {
  transform: translateY(0);
}

.panel-title {
  font-size: 26rpx;
  color: #999;
  font-weight: 600;
  padding: 24rpx 0 16rpx;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

/* Sort Options */
.sort-options {
  display: flex;
  flex-direction: column;
}
.sort-opt {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 30rpx;
  color: #333;
}
.sort-opt:last-child { border-bottom: none; }
.sort-opt-active {
  color: #1677ff;
  font-weight: 600;
}
.check-icon {
  color: #1677ff;
  font-size: 32rpx;
}

/* Chips */
.chip-row {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.chip {
  background: #f5f6fa;
  color: #555;
  border-radius: 40rpx;
  padding: 12rpx 28rpx;
  font-size: 26rpx;
  border: 2rpx solid transparent;
  transition: all 0.15s;
}
.chip-active {
  background: #e6f4ff;
  color: #1677ff;
  border-color: #1677ff;
  font-weight: 600;
}
.star-chip {
  display: flex;
  align-items: center;
  gap: 6rpx;
}
.star-emoji { color: #ffa500; font-size: 22rpx; }

/* Panel Footer */
.panel-footer {
  display: flex;
  gap: 20rpx;
  margin-top: 32rpx;
}
.btn-reset {
  flex: 1;
  border: 2rpx solid #ddd;
  border-radius: 40rpx;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
}
.btn-confirm {
  flex: 2;
  background: linear-gradient(135deg, #1677ff, #0e5fd8);
  border-radius: 40rpx;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #fff;
  font-weight: 600;
  box-shadow: 0 6rpx 16rpx rgba(22, 119, 255, 0.30);
}

/* ════════════════════════════════════════════
   SEARCH MODAL
   ════════════════════════════════════════════ */
.search-modal {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 500;
  display: flex;
  align-items: flex-start;
  padding-top: 100rpx;
}
.search-modal-inner {
  background: #fff;
  width: 100%;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.search-modal-input {
  flex: 1;
  background: #f5f6fa;
  border-radius: 40rpx;
  padding: 18rpx 30rpx;
  font-size: 28rpx;
  color: #333;
}
.search-modal-btn {
  background: #1677ff;
  color: #fff;
  border-radius: 40rpx;
  padding: 18rpx 32rpx;
  font-size: 28rpx;
  font-weight: 600;
}
.search-modal-cancel {
  color: #666;
  font-size: 28rpx;
}

/* ════════════════════════════════════════════
   LIST SCROLL
   ════════════════════════════════════════════ */
.list-scroll {
  flex: 1;
  overflow: hidden;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.result-count {
  padding: 20rpx 4rpx 12rpx;
  font-size: 24rpx;
  color: #999;
}
.count-num {
  color: #1677ff;
  font-weight: 700;
  font-size: 26rpx;
}

/* ════════════════════════════════════════════
   HOTEL CARD
   ════════════════════════════════════════════ */
.hotel-card {
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(17, 24, 39, 0.07);
  transition: transform 0.15s;
}
.hotel-card:active { transform: scale(0.98); }

/* Cover Image */
.card-img-wrap {
  position: relative;
  height: 280rpx;
}
.card-img {
  width: 100%;
  height: 100%;
  display: block;
  background: #e8ecf2;
}
.star-ribbon {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  display: flex;
}
.star-icon {
  color: #ffa500;
  font-size: 24rpx;
  text-shadow: 0 1rpx 4rpx rgba(0,0,0,0.3);
}
.hot-tag {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: linear-gradient(135deg, #ff5500, #ff8c00);
  color: #fff;
  font-size: 20rpx;
  font-weight: 700;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

/* Card Body */
.card-body {
  padding: 24rpx 24rpx 20rpx;
}
.card-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a2e;
  margin-bottom: 14rpx;
  line-height: 1.3;
}

/* Score Row */
.card-score-row {
  display: flex;
  align-items: center;
  margin-bottom: 14rpx;
}
.score-pill {
  background: #1677ff;
  color: #fff;
  font-size: 26rpx;
  font-weight: 700;
  padding: 6rpx 16rpx;
  border-radius: 8rpx 16rpx 16rpx 8rpx;
  letter-spacing: 1rpx;
  margin-right: 14rpx;
}
.score-desc {
  display: flex;
  align-items: center;
}
.score-label {
  font-size: 24rpx;
  color: #1677ff;
  font-weight: 600;
}
.score-count {
  font-size: 22rpx;
  color: #aaa;
}

/* Address */
.card-addr {
  display: flex;
  align-items: flex-start;
  margin-bottom: 14rpx;
}
.addr-icon { font-size: 22rpx; margin-right: 6rpx; flex-shrink: 0; }
.addr-text {
  font-size: 24rpx;
  color: #888;
  line-height: 1.4;
  flex: 1;
}

/* Tags */
.card-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 16rpx;
}
.tag-item {
  background: #e6f4ff;
  color: #1677ff;
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
}

/* Price Row */
.card-price-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 6rpx;
}
.price-left {
  display: flex;
  align-items: baseline;
  gap: 2rpx;
}
.price-from { font-size: 24rpx; color: #ff5500; }
.price-num {
  font-size: 48rpx;
  font-weight: 800;
  color: #ff5500;
  line-height: 1;
}
.price-unit { font-size: 22rpx; color: #aaa; }
.book-btn {
  background: linear-gradient(135deg, #ff5500, #ff8c00);
  color: #fff;
  font-size: 26rpx;
  font-weight: 700;
  padding: 16rpx 36rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(255,85,0,0.35);
}

/* ════════════════════════════════════════════
   FOOTER STATES
   ════════════════════════════════════════════ */
.list-footer {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  font-size: 24rpx;
  color: #aaa;
  gap: 12rpx;
}
.no-more { color: #ccc; font-size: 22rpx; }
.empty {
  flex-direction: column;
  padding: 80rpx;
  color: #bbb;
}
.empty-icon { font-size: 80rpx; margin-bottom: 16rpx; }
.error-tip { color: #ff5500; }

/* Loading Dots */
.loading-dots {
  display: flex;
  gap: 8rpx;
}
.dot {
  width: 14rpx; height: 14rpx;
  border-radius: 50%;
  background: #1677ff;
  animation: bounce 1.2s infinite ease-in-out;
}
.dot2 { animation-delay: 0.2s; }
.dot3 { animation-delay: 0.4s; }
@keyframes bounce {
  0%,80%,100% { transform: scale(0.7); opacity: 0.4; }
  40% { transform: scale(1); opacity: 1; }
}