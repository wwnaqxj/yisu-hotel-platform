/* Global */
page {
  background-color: #f5f5f5;
  height: 100%;
}
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

/* Header */
.header {
  background: #fff;
  padding: 20rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  z-index: 100;
}

.search-bar {
  display: flex;
  align-items: center;
  padding: 0 20rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}

.city-selector {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  margin-right: 20rpx;
  color: #333;
}
.arrow-down {
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 10rpx solid #666;
  margin-left: 8rpx;
}

.date-selector {
  font-size: 22rpx;
  color: #666;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
}
.date-info {
  display: flex;
  flex-direction: column;
}
.night-count {
  font-size: 20rpx;
  color: #999;
}

.keyword-input {
  flex: 1;
  background: #f2f2f2;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  color: #333;
  font-size: 26rpx;
}
.placeholder {
  color: #999;
}

/* Filter Bar */
.filter-bar {
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
}
.filter-item {
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: center;
  padding-bottom: 10rpx;
}
.filter-item.active {
  color: #0086F6;
  border-bottom: 4rpx solid #0086F6;
}

/* Hotel List */
.hotel-list {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}

.hotel-item {
  display: flex;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.hotel-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx 0 0 12rpx;
  background-color: #eee;
}

.hotel-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.hotel-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.hotel-score-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}
.score-badge {
  background: #0086F6;
  color: #fff;
  font-size: 22rpx;
  padding: 2rpx 8rpx;
  border-radius: 6rpx 6rpx 6rpx 0;
  margin-right: 10rpx;
}
.comment-desc {
  font-size: 22rpx;
  color: #0086F6;
}

.hotel-address {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.hotel-tags {
  display: flex;
  flex-wrap: wrap;
}
.tag {
  font-size: 20rpx;
  color: #666;
  border: 1rpx solid #eee;
  padding: 2rpx 8rpx;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
  border-radius: 4rpx;
}

/* Search overlay */
.search-overlay {
  position: absolute;
  left: 20rpx;
  right: 20rpx;
  top: 120rpx;
  z-index: 300;
  display: flex;
  background: #fff;
  padding: 10rpx;
  border-radius: 12rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.15);
}
.search-input {
  flex: 1;
  height: 64rpx;
  padding: 10rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  font-size: 26rpx;
}
.search-btn {
  margin-left: 12rpx;
  background: #0086F6;
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
}

/* Facilities */
.facilities-options {
  display: flex;
  flex-wrap: wrap;
}
.facility-tag {
  background: #f5f5f5;
  padding: 10rpx 12rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}
.facility-tag.selected {
  background: #eaf5ff;
  color: #0086F6;
  border: 1rpx solid #bfe6ff;
}

.hotel-bottom {
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
}
.price-box {
  color: #FF5500;
  display: flex;
  align-items: baseline;
}
.currency {
  font-size: 22rpx;
}
.price {
  font-size: 36rpx;
  font-weight: bold;
  margin: 0 4rpx;
}
.unit {
  font-size: 22rpx;
  color: #999;
}

/* Load State */
.loading-state, .no-more, .error-state {
  text-align: center;
  padding: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* Filter Popup */
.filter-popup {
  position: absolute;
  top: 180rpx; /* Height of header approximated */
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 200;
  display: flex;
  flex-direction: column;
}
.popup-mask {
  flex: 1;
  background: rgba(0,0,0,0.5);
}
.popup-content {
  background: #fff;
  padding: 20rpx;
  animation: slideDown 0.2s ease-out;
}
@keyframes slideDown {
  from { transform: translateY(-100%); }
  to { transform: translateY(0); }
}

.filter-section {
  margin-bottom: 30rpx;
}
.section-title {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}
.price-options, .star-options {
  display: flex;
  flex-wrap: wrap;
}
.price-tag, .star-tag {
  width: 30%;
  text-align: center;
  background: #f5f5f5;
  color: #333;
  padding: 10rpx 0;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
}
.price-tag.selected, .star-tag.selected {
  background: #eaf5ff;
  color: #0086F6;
}

/* Sort List */
.sort-list {
  background: #fff;
}
.sort-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
  color: #333;
}
.sort-item.active {
  color: #0086F6;
}

.popup-footer {
  display: flex;
  margin-top: 20rpx;
}
.btn-reset, .btn-confirm {
  flex: 1;
  margin: 0 10rpx;
  font-size: 28rpx;
}
.btn-reset {
  background: #fff;
  border: 1rpx solid #ccc;
  color: #333;
}
.btn-confirm {
  background: #0086F6;
  color: #fff;
  border: 1rpx solid #0086F6;
}