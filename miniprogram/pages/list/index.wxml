<view class="container">
  <view class="card">
    <view style="font-weight:600;">条件</view>
    <view style="margin-top:10rpx; font-size:24rpx; opacity:.7;">
      城市：{{query.city || '-'}}
    </view>
    <view style="margin-top:6rpx; font-size:24rpx; opacity:.7;">
      关键词：{{query.keyword || '-'}}
    </view>
    <view style="margin-top:6rpx; font-size:24rpx; opacity:.7;">
      日期：{{query.checkIn || '-'}} - {{query.checkOut || '-'}}
    </view>
  </view>

  <view style="height: 16rpx;"></view>

  <view wx:for="{{items}}" wx:key="id" class="card" style="margin-bottom: 16rpx;" bindtap="onItemTap" data-id="{{item.id}}">
    <view style="display:flex; justify-content:space-between; gap: 16rpx;">
      <view style="font-weight:600;">{{item.nameZh || item.nameEn || '未命名酒店'}}</view>
      <view style="font-weight:600;">¥ {{item.price || '-'}}</view>
    </view>
    <view style="margin-top:10rpx; font-size:24rpx; opacity:.7;">{{item.address || ''}}</view>
    <view style="margin-top:6rpx; font-size:24rpx; opacity:.7;">星级：{{item.star || '-'}}</view>
  </view>

  <view style="text-align:center; padding: 20rpx 0; font-size:24rpx; opacity:.7;">
    <text wx:if="{{loading}}">加载中...</text>
    <text wx:elif="{{hasMore}}">上拉加载更多</text>
    <text wx:else>没有更多了</text>
  </view>

  <assistant-float iconSrc="/components/assets/ai.jpg" />
</view>
