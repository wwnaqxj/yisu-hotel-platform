.banner-swiper {
  width: 100%;
  height: 320rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.banner-img {
  width: 100%;
  height: 100%;
  display: block;
}

.banner-title {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  background: linear-gradient(transparent, rgba(0,0,0,.5));
  color: #fff;
  font-size: 28rpx;
}
