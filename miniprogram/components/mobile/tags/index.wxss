.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: #f3f4f6;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #333;
}

.tag.active {
  background: #1677ff;
  color: #fff;
}

.tag:active {
  opacity: 0.9;
}

.tag-checkbox {
  margin-right: 8rpx;
}

.tag-text {
  line-height: 1.4;
}
