<view class="calendar">
  <view class="calendar-header">
    <view class="nav" bindtap="prevMonth">‹</view>
    <text class="title">{{year}}年{{month}}月</text>
    <view class="nav" bindtap="nextMonth">›</view>
  </view>
  <view class="weekdays">
    <text wx:for="{{weeks}}" wx:key="*this" class="weekday">{{item}}</text>
  </view>
  <view class="days">
    <view
      wx:for="{{days}}"
      wx:key="index"
      class="day {{item.status}}"
      data-date="{{item.date}}"
      data-status="{{item.status}}"
      bindtap="onDayTap"
    >
      <text>{{item.day}}</text>
    </view>
  </view>
  <view class="quick-options">
    <text class="quick-btn" bindtap="quickToday">今天入住</text>
    <text class="quick-btn" bindtap="quickTomorrow">明天入住</text>
    <text class="quick-btn" bindtap="quickWeekend">本周周末</text>
  </view>
</view>
